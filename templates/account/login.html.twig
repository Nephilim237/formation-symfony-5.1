{% extends 'base.html.twig' %}

{% block title %}Se connecter!{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-3">&nbsp;</div>
            <div class="col-md-6">
                <div class="bg-dark p-3 rounded">
                    <h3 class="text-light">Se connecter</h3>
                    {% if hasError %}
                        <div class="alert alert-warning">Identifiant ou mot de passe incorrect</div>
                    {% endif %}
                    <form action="{{ path('account_login') }}" method="post">
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="text" name="_username" id="email" placeholder="Nom d'utilisateur" class="form-control" required="required" value="{{ username }}">
                        </div>
                        <div class="form-group">
                            <label for="password">Mot de passe</label>
                            <input type="password" name="_password" id="password" placeholder="Mot de passe..."
                                   class="form-control" required="required">
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Se connecter" class="btn btn-outline-primary text-white border-white">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
