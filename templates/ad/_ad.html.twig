{% set url = path('ads_show', {'slug' : ad.slug}) %}
<div class="col-md-4">
    <div class="card bg-dark text-white-50 mb-3">
        <div class="card-header text-center">
            {{ ad.rooms }} chambres, <strong>{{ ad.price }} Fcfa / nuit</strong><br>
            <small>Pas encore note</small>
        </div>
        <a href="{{ url }}">
            <img src="{{ ad.coverImage }}" alt="Image de l'appartement" class="home-card-image">
        </a>
        <div class="card-body">
            <a href="{{ url }}">
                <h4 class="card-title">
                    {{ ad.title }}
                </h4>
            </a>
            <p class="card-text">
                {{ ad.introduction }}
            </p>
            <a href="{{ url }}" class="btn btn-secondary">Plus d'info!</a>

            {% if app.user and app.user == ad.author %}
            <a href="{{ path('ads_edit', {'slug' : ad.slug}) }}" class="btn btn-info">Modifier l'annonce</a>
            {% endif %}
        </div>
    </div>
</div>