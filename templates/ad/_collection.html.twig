{% block _a_images_widget %}
    <p class="h5 text-primary">Images de l'annonce</p>

    {{ form_widget(form) }}

    <input type="hidden" id="widgets_counter" value="0">

    <div class="form-group">
        <button type="button" class="btn btn-primary" id="add-field">Ajouter une image</button>
    </div>
{% endblock %}

{% block _a_images_entry_widget %}
    <div class="form-group" id="block_{{ id }}">
        <div class="row">
            <div class="col-10">
                <div class="row">
                    <div class="col">
                        {{ form_widget(form.url) }}
                        {{ form_errors(form.url) }}
                    </div>
                    <div class="col">
                        {{ form_widget(form.caption) }}
                        {{ form_errors(form.caption) }}
                    </div>
                </div>
            </div>
            <div class="col">
                <button type="button" data-action="delete" data-target="#block_{{ id }}" class="btn btn-danger">X</button>
            </div>
        </div>
    </div>
{% endblock %}

{% block _a_images_entry_row %}
    {{ form_widget(form) }}
{% endblock %}